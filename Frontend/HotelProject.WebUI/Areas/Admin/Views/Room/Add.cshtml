@model AddRoomDto
@{
    ViewData["Title"] = "Oda Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <form method="post" enctype="multipart/form-data">

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Oda Numarası</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="Oda Numarası" asp-for="RoomNumber">
                    <span class="text text-danger" asp-validation-for="RoomNumber"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Oda Başlığı</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="Oda Başlığı" asp-for="Title">
                    <span class="text text-danger" asp-validation-for="Title"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Yıldız</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" placeholder="Oda Başlığı" asp-for="Star">
                    <span class="text text-danger" asp-validation-for="Star"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Fiyat</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="Fiyat" asp-for="Price">
                    <span class="text text-danger" asp-validation-for="Price"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Yatak Sayısı</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="Yatak Sayısı" asp-for="BedCount">
                    <span class="text text-danger" asp-validation-for="BedCount"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Duş Sayısı</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="Duş Sayısı" asp-for="BathCount">
                    <span class="text text-danger" asp-validation-for="BathCount"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Wifi</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="Wifi var mı ?" asp-for="Wifi">
                    <span class="text text-danger" asp-validation-for="Wifi"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Açıklama</label>
                <div class="col-sm-10">
                    <textarea asp-for="Description" rows="8" class="form-control" placeholder="Açıklama giriniz"></textarea>
                    <span class="text text-danger" asp-validation-for="Description"></span>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Dosya Ekle</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control-file" name="roomImage">
                </div>
            </div>

            <div>
                <button class="btn btn-success text-white" type="submit">Ekle</button>
                <a asp-controller="Service" asp-action="Index" asp-area="Admin" class="btn btn-danger text-white">Vazgeç</a>
            </div>
        </form>
    </div>
</div>

