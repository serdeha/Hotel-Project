@model TestimonialAddViewModel
@{
    ViewData["Title"] = "Referans Ekle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group row">
                <label class="col-sm-2 col-form-label">İsim</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="İsim" asp-for="Name">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Title</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="Title" asp-for="Title">
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Açıklama</label>
                <div class="col-sm-10">
                    <textarea asp-for="Description" class="form-control" placeholder="Açıklama giriniz..."></textarea>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Dosya Ekle</label>
                <div class="col-sm-10">
                    <input type="file" class="form-control-file" name="TestimonialImage">
                </div>
            </div>

            <div>
                <button class="btn btn-success text-white" type="submit">Ekle</button>
                <a asp-controller="Testimonial" asp-action="Index" asp-area="Admin" class="btn btn-danger text-white">Vazgeç</a>
            </div>
        </form>
    </div>
</div>


