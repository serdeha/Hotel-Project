@model List<StaffViewModel>
@{
    ViewData["Title"] = "Yöneticilerimiz";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if(Model.Count > 0)
{
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="text-left col-md-10">
                    <h1>Yöneticiler</h1>
                </div>
                <div class="text-right col-md-2">
                    <a asp-controller="Staff" asp-action="Add" asp-area="Admin" class="btn btn-success text-left text-white">Personel Ekle</a>
                </div>
            </div>


            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Resim</th>
                        <th>İsim</th>
                        <th>Pozisyon</th>
                        <th>Sosyal Medya</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var staff in Model)
                    {
                        <tr>
                            <td>
                                <img class="rounded-circle mt-4" height="40" width="40" src="~/img/staff/@staff.StaffImage" alt="@staff.Title" />
                            </td>
                            <td>@staff.Name</td>
                            <td>@staff.Title</td>
                            <td>
                                <a href="https://www.facebook.com/@staff.FacebookLink"><i class="fa fa-facebook"></i></a> |
                                <a href="https://www.instagram.com/@staff.InstagramLink"><i class="fa fa-instagram"></i></a> |
                                <a href="https://twitter.com/@staff.TwitterLink"><i class="fa fa-twitter"></i></a>
                            </td>
                            <td>
                                <a asp-controller="Staff" asp-action="Delete" asp-area="Admin" asp-route-staffId="@staff.Id" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a>
                                <a asp-controller="Staff" asp-action="Update" asp-area="Admin" asp-route-staffId="@staff.Id" class="btn mb-1 btn-rounded btn-outline-warning">Güncelle</a>
                                <a href="#" class="btn mb-1 btn-rounded btn-outline-info">Detaylar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Henüz yönetici eklenilmemiş!</h4>
            <div class="card-content">
                <div class="alert alert-danger">
                    <h4 class="alert-heading">Yönetici Bulunamadı!</h4>
                    <p>
                        Henüz yönetici eklenilmemiş. Lütfen bir yönetici <a asp-asp-controller="Staff" asp-action="Add" asp-area="Admin" class="text text-info">ekleyiniz.</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
}


