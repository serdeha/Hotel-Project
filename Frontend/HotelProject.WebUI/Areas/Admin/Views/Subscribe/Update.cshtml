@model UpdateSubscribeDto
@{
    ViewData["Title"] = "Abone Güncelle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <form method="post">

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CreatedByName" />
            <input type="hidden" asp-for="CreatedDate" />

            <div class="form-group row">
                <label class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" placeholder="Email Adresi" asp-for="Email">
                    <span class="text text-danger" asp-validation-for="Email"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="form-check ml-3">
                    <input class="form-check-input" type="checkbox" asp-for="IsActive">
                    <label class="form-check-label">Aktif Mi</label>
                </div>
            </div>

            <div>
                <button class="btn btn-success text-white" type="submit">Ekle</button>
                <a asp-controller="Subscribe" asp-action="Index" asp-area="Admin" class="btn btn-danger text-white">Vazgeç</a>
            </div>
        </form>
    </div>
</div>

