@model List<ResultRoomDto>

@if(Model.Count > 0)
{
    <div class="container-xxl py-5">
        <div class="container">
            <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
                <h6 class="section-title text-center text-primary text-uppercase">Odalarımız</h6>
                <h1 class="mb-5">Odalarımızı, Hemen <span class="text-primary text-uppercase">Kefşet!</span></h1>
            </div>
            <div class="row g-4">
                @foreach (var room in Model)
                {
                    <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                        <div class="room-item shadow rounded overflow-hidden">
                            <div class="position-relative">
                                <img class="img-fluid" src="~/img/room/@room.RoomCoverImage" alt="">
                                <small class="position-absolute start-0 top-100 translate-middle-y bg-primary text-white rounded py-1 px-3 ms-4">@string.Concat(String.Format("{0:#.#.##}",room.Price), "₺/Gecelik")</small>
                            </div>
                            <div class="p-4 mt-2">
                                <div class="d-flex justify-content-between mb-3">
                                    <h5 class="mb-0">@room.Title</h5>
                                    <div class="ps-2">
                                        @for(int i = 0;i < room.Star;i++)
                                        {
                                            <small class="fa fa-star text-primary"></small>
                                        }
                                    </div>
                                </div>
                                <div class="d-flex mb-3">
                                    <small class="border-end me-3 pe-3"><i class="fa fa-bed text-primary me-2"></i>@room.BedCount Yatak</small>
                                    <small class="border-end me-3 pe-3"><i class="fa fa-bath text-primary me-2"></i>@room.BathCount Duş</small>
                                    <small><i class="fa fa-wifi text-primary me-2"></i>@room.Wifi Wifi</small>
                                </div>
                                <p class="text-body mb-3">@room.Description</p>
                                <div class="d-flex justify-content-between">
                                    <a class="btn btn-sm btn-primary rounded py-2 px-4" asp-controller="Room" asp-action="Detail" asp-route-roomId="@room.Id">Detayları Gör</a>
                                    <a class="btn btn-sm btn-dark rounded py-2 px-4" asp-controller="Room" asp-action="Book" asp-route-roomId="@room.Id">Şimdi Al</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }                
            </div>
        </div>
    </div>
}
