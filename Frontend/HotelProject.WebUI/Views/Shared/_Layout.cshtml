<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Hotelier @(ViewData["Title"] == null ? "" : $" | {ViewData["Title"]}") </title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    @await Html.PartialAsync("_CssPartialView")
    @if (IsSectionDefined("Css"))
    {
        @await RenderSectionAsync("Css",false)
    }
</head>

<body>
    <div class="container-fluid bg-white p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Yükleniyor...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Header Start -->
        @await Html.PartialAsync("_NavbarPartialView")
        <!-- Header End -->
        <!-- Carousel Start -->
        @await Component.InvokeAsync("Carousel")
        <!-- Carousel End -->
        <!-- Booking Start -->
        @await Component.InvokeAsync("Booking")
        <!-- Booking End -->
        @RenderBody()
        <!-- Newsletter Start -->
        @await Component.InvokeAsync("Newsletter")
        <!-- Newsletter Start -->
        <!-- Footer Start -->
        @await Html.PartialAsync("_FooterPartialView")
        <!-- Footer End -->
        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    @await Html.PartialAsync("_JsPartialView")
    @if (IsSectionDefined("Scripts"))
    {
        @await RenderSectionAsync("Scripts",false)
    }
</body>

</html>